blue-color = #aaa
off-white = #eef

body
    font-size 16px
    background-color blue-color
    color off-white
    font-family Open Sans

.jumbotron
    background-position 50% 0 fixed
    background-size 100% auto

    text-align center
    
    height 20rem
    overflow hidden

    a
        color blue-color

.drop-cap
    vertical-align bottom
    font-size 2.5em
    color off-white

.row-header
    color off-white

.member-bio
    .name
        margin 8px 0
    a
        color off-white
    .info
        margin 6px 0
        text-align center
    .avatar
        img
            display block
            margin 0 auto

.team-container
    display flex
    
.team-member
    flex 1 1 auto