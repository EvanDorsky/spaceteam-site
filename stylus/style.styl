bg-color = rgb(25, 23, 33)
off-white = #eef
space-green = rgb(179, 209, 67)
space-pink = rgb(234, 20, 140)
space-orange = rgb(247, 160, 49)
space-teal = rgb(0, 170, 171)
space-purple = rgb(170, 77, 154)
space-gold = rgb(253, 196, 49)

@font-face
    font-family 'Rainyhearts'
    src url('./font/rainyhearts.ttf') format('truetype')

@font-face
    font-family 'Venus Rising'
    src url('./font/venus rising rg.ttf') format('truetype')

*
    margin 0
    padding 0

li
    list-style-type none

body
    font-size 16px
    background-color bg-color
    color off-white
    font-family Open Sans

.jumbotron
    background-position 50% 0 fixed
    background-size 100% auto

    text-align center

    overflow hidden
    padding 0
    img
        visibility hidden
        margin -3rem 0
        width 100%

    a
        color bg-color

.drop-cap
    vertical-align bottom
    font-size 2.5em
    color off-white

.row-header
    color off-white

.member-bio
    font-family Rainyhearts
    .name
        font-size 2.7rem
        margin 8px 0
    a
        color off-white
    .info
        margin 6px 0
        text-align center
    .avatar
        img
            display block
            margin 0 auto
    
.cols
    display flex
    
.col
    flex 1 1 auto
    padding 1rem

space-heading(space-color, upper-line)
    color space-color
    if upper-line
        border-top 6px solid space-color
    
.green-line
    space-heading(space-green, 1)

.orange-line
    space-heading(space-orange, 1)

.gold-line
    space-heading(space-gold, 1)

.teal-line
    space-heading(space-teal, 1)

.pink-line
    space-heading(space-pink, 1)
    

.green
    space-heading(space-green, 0)

.orange
    space-heading(space-orange, 0)

.gold
    space-heading(space-gold, 0)

.teal
    space-heading(space-teal, 0)

.pink
    space-heading(space-pink, 0)

.purple
    space-heading(space-purple, 0)

.section
    h2
        padding-top 6px
    h2, h3
        font-family Venus Rising
        text-align center
        
    padding 3rem
    max-width 900px
    margin 0 auto