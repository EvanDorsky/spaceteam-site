bg-color = rgb(100, 100, 101)
off-white = #eef

@font-face {
    font-family: 'Rainyhearts'
    src: url('./font/rainyhearts.ttf') format('truetype')
}

body
    font-size 16px
    background-color bg-color
    color off-white
    font-family Open Sans

.jumbotron
    background-position 50% 0 fixed
    background-size 100% auto

    text-align center

    overflow hidden
    padding 0
    img
        visibility hidden
        margin -3rem 0
        width 100%

    a
        color bg-color

.drop-cap
    vertical-align bottom
    font-size 2.5em
    color off-white

.row-header
    color off-white

.member-bio
    font-family Rainyhearts
    .name
        margin 8px 0
    a
        color off-white
    .info
        margin 6px 0
        text-align center
    .avatar
        img
            display block
            margin 0 auto

.team-container
    display flex
    
.team-member
    flex 1 1 auto