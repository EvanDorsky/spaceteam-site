doctype html

mixin bio(name, github, githuburl, image, bio)
    .member-bio
        .avatar
            img(src="#{image}")
        .info
            h3.name #{name}
        p.bio #{bio}

html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title= "Space Team"

        link(href="stylesheets/bootstrap.min.css", rel="stylesheet")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
        script(type="text/javascript", src="./js/main.js")
        link(href="stylesheets/style.css", rel="stylesheet")
        link(href='http://fonts.googleapis.com/css?family=Open+Sans:300', rel='stylesheet', type='text/css')
        link(href="img/js-favicon.ico", rel="icon", type="image/x-icon")

    body
        .jumbotron(style="background-image: url('./img/banner.svg')", data-type="background", data-speed="3")
            img(src="./img/banner.svg")
        .team-container
            each member in team
                .team-member
                    +bio(member.name, member.github, member.githuburl, member.image, member.bio)